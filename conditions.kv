MDScreen:
    name: "condition"       
    MDFloatLayout:
        md_bg_color: 41/255, 34/255, 34/255, 1
        MDLabel:
            text: "Privacy Policy ! "
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            theme_text_color: 'Custom'
            halign: 'center'
            text_color: 1,1,1,1
            font_size: "24sp"
            font_name: "OpenSans"
        MDLabel:
            text: "We are happy to see you here, to see you here, it means that you pay a particular attention to our application and therefore to our working methods. "
            pos_hint: {'center_x':0.5,'center_y':0.8}
            theme_text_color: 'Custom'
            text_color: 1,1,1,1
            font_size: "20sp"
            font_name: "OpenSans"
        Button:
            pos_hint: {'center_x':0.05, 'center_y':0.95}
            size_hint: (0.4, 0.02)
            font_size: 15
            background_color: 41/255, 34/255, 34/255, 1
            background_normal: ''
            on_press: app.root.current = "register"
            Image:
                source: "back2.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y



              

