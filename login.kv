MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 41/255, 34/255, 34/255, 1
        Button:
            pos_hint: {'center_x':0.05, 'center_y':0.95}
            size_hint: (0.4, 0.02)
            font_size: 15
            background_color: 41/255, 34/255, 34/255, 1
            background_normal: ''
            on_press: app.root.current = "register"
            Image:
                source: "back2.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        MDLabel:
            text: "Happy to see you back ! "
            font_name: "OpenSans"
            font_size: "30sp"
            pos_hint: {'center_x':0.5, 'center_y':0.85}
            text_color: 1,1,1,1
            halign: 'center'
            theme_text_color: 'Custom'
        MDLabel:
            text: "Login"
            font_name: "OpenSans"
            font_size: "25sp"
            pos_hint: {'center_x':0.5, 'center_y':0.75}
            text_color: 1,1,1,1
            halign: 'center'
            theme_text_color: 'Custom'
        MDTextFieldRound:
            id: password_1
            hint_text: "Password"
            size_hint_x: None
            size_hint_y: 0.08
            width: 247
            font_size: 18
            pos_hint: {'center_x':0.5, 'center_y':0.45}
        MDTextFieldRound:
            id: e_mail_1
            hint_text: "E-Mail"
            size_hint_x: None
            size_hint_y: 0.08
            width: 247
            font_size: 18
            pos_hint: {'center_x':0.5, 'center_y':0.55}
        MDTextFieldRound:
            id: full_name_1
            hint_text: "Full Name"
            size_hint_x: None
            size_hint_y: 0.08
            width: 247
            font_size: 18
            pos_hint: {'center_x':0.5, 'center_y':0.65}
        MDFillRoundFlatButton:
            text:  "Login !"
            pos_hint:{'center_x':0.5, 'center_y':0.35}
            size_hint: (0.58, 0.06)
            font_name: "OpenSans"
            font_size: "25sp"
            theme_text_color:'Custom'
            color: 0/255, 0/255, 0/255, 1
            background_color: 62/255, 216/255, 133/255, 1
            background_normal: ''
            on_press: app.root.current  = "commentinput"