MDScreen:
    name: "recaptcha"
    on_enter:
        captcha.source = "http://127.0.0.1:2222/captcha"
    MDFloatLayout:
        md_bg_color:41/255, 34/255, 34/255, 1
        MDTextField:
            id:recaptcha
            mode:"round"
            font_size: 15
            size_hint_y: None
            height: 15
            width: 0.5
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            halign: 'center'
        AsyncImage:
            id:captcha
            source: captcha.source
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: (0.6, 0.6)
        MDFillRoundFlatButton:
            text: "Submit."
            font_size: "20sp"
            font_name: "Popp"
            pos_hint: {'center_x':0.5, 'center_y':0.4}
            halign: 'center'
            theme_text_color:'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            size_hint: (0.58, 0.06)
            md_bg_color: 128/255, 128/255, 128/255, 1
            background_normal:''
            on_release: app.recaptcha__()
        MDIconButton:
            icon:'arrow-left'
            icon_color: "white"
            pos_hint: {'center_x':0.05, 'center_y':0.95}
            theme_icon_color: 'Custom'
            on_release: app.root.current="register"

        
        