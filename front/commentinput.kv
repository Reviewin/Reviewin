MDScreen:
    name: "commentinput"
    MDFloatLayout:
        md_bg_color: 41/255, 34/255, 34/255, 1
        MDLabel:
            text: "Comment !"
            font_size: "30sp"
            font_name: "RSlab"
            text_color: 1,1,1,1
            pos_hint: {'center_x': 0.5, 'center_y':0.95}
        MDLabel:
            text: "Here you can send us your comments about the product. We want your opinion ! If you continue helping us by giving your opinion about the thing you see, we'll have the motivation to add comments with some interactions with other users ! So keep going !"
            font_size: "15sp"
            font_name: "RSlab"
            text_color: 1,1,1,1
            theme_text_color: 'Custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            halign: 'center'
        MDTextField:
            id: comment_input
            mode:"round"
            hint_text: 'Be subjective ! '
            font_size: 15
            size_hint_y: None
            height: 15
            width: 0.5
            pos_hint: {'center_x':0.5, 'center_y':0.95}
            halign: 'center'
        Button:
            pos_hint: {'center_x':0.05, 'center_y':0.95}
            size_hint: (0.2, 0.02)
            font_size: 15
            background_color: 41/255, 34/255, 34/255, 1
            background_normal: ''
            on_press: app.root.current = "accueil"
        


        