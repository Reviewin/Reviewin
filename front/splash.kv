MDScreen:
    name: "splash"
    on_enter:
        self.ids.progress.start()
    MDFloatLayout:
        md_bg_color: 41/255, 34/255, 34/255, 1
        Image:
            source: "reviewin2.png"
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
        MDLabel:
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 1,1,1,1
            font_size: "35sp"
        BoxLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            padding: "10dp"
            size_hint_x:0.7
            size_hint_y: 0.025
            MDProgressBar:
                id: progress
                orientation: "horizontal"
                type: "indeterminate"
                running_duration: 1
                catching_duration: 1


 