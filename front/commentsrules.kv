MDScreen:
    name: "commentsrules"
    MDFloatLayout:
        md_bg_color: 41/255, 34/255, 34/255, 1
        MDLabel:
            text: "[u]Comments Rules[/u]"
            text_color: 1,1,1,1
            markup: True
            font_name: "OpenSans"
            font_size: "35sp"
            theme_text_color: 'Custom'
            pos_hint: {'center_x': 0.95, 'center_y':0.95}
            halign: 'center'
        MDLabel:
            text: "- Discuss only the product in question, all derivations will be deleted. #Dictature :)"
            text_color: 1,1,1,1
            font_name: "OpenSans"
        MDFillRoundFlatButton:
            text: "I agree."
            font_size: "15sp"
            font_name: "OpenSans"
            pos_hint: {'center_x':0.5, 'center_y':0.6}
            theme_text_color:'Custom'
            text_color: 255/255, 255/255, 255/255, 1
            size_hint: (0.30, 0.04)
            md_bg_color: 62/255, 216/255, 133/255, 1
            background_normal:''
            radius: [20]
            on_press: app.root.current = "commentinput"